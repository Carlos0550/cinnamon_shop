generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ProductState {
  active
  inactive
  draft
  out_stock
  deleted
}

enum PromoType {
  percentage
  fixed //monto fijo
}

enum CategoryStatus {
  deleted
  active
  inactive
}

enum SaleSource {
  WEB
  CAJA
}

enum PaymentMethod {
  TARJETA
  EFECTIVO
  TRANSFERENCIA
  QR
  NINGUNO
}

model User {
  id             Int      @id @default(autoincrement())
  email          String
  password       String
  name           String
  is_active      Boolean  @default(true)
  is_clerk       Boolean  @default(false)
  clerk_user_id  String?  @unique
  profile_image  String?
  created_at     DateTime @default(now()) @db.Timestamptz(3)
  updated_at     DateTime @updatedAt @db.Timestamptz(3)
  role           Int      @default(2)
  created_promos Promos[] @relation("PromosCreatedBy")

  sales Sales[]
  orders Orders[]
  phone String?
  shipping_street String?
  shipping_postal_code String?
  shipping_city String?
  shipping_province String?
  cart Cart?

  @@unique([email, role])
  @@index([is_active])
  @@index([role])
  @@index([created_at])
}

model Categories {
  id         String         @id @default(cuid())
  title      String
  image      String?
  is_active  Boolean        @default(true)
  created_at DateTime       @default(now()) @db.Timestamptz(3)
  status     CategoryStatus @default(active)
  products   Products[]
  promos     Promos[]

  @@index([status, is_active])
  @@index([created_at])
  @@index([title])
}

model Products {
  id          String       @id @default(cuid())
  title       String
  price       Float        @default(0.00)
  description String
  is_active   Boolean      @default(true)
  state       ProductState @default(active)
  created_at  DateTime     @default(now()) @db.Timestamptz(3)
  images      Json         @default("[]")
  categoryId  String?
  tags        Json?        @default("[]")
  stock       Int          @default(1)
  category    Categories?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  promos      Promos[]
  sales       Sales[]
  orderItems  OrderItems[]

  @@index([categoryId])
  @@index([categoryId, is_active])
  @@index([is_active, state])
  @@index([created_at])
  @@index([price])
}

model Promos {
  id               String       @id @default(cuid())
  code             String?      @unique
  title            String
  description      String?
  image            String?
  type             PromoType
  value            Float
  max_discount     Float?
  min_order_amount Float?
  start_date       DateTime?    @db.Timestamptz(3)
  end_date         DateTime?    @db.Timestamptz(3)
  is_active        Boolean      @default(true)
  usage_limit      Int?
  usage_count      Int          @default(0)
  per_user_limit   Int?
  categories       Categories[]
  products         Products[]
  all_products     Boolean      @default(false)
  all_categories   Boolean      @default(false)
  show_in_home     Boolean      @default(false)
  created_at       DateTime     @default(now()) @db.Timestamptz(3)
  updated_at       DateTime     @updatedAt @db.Timestamptz(3)
  createdById      Int?
  created_by       User?        @relation("PromosCreatedBy", fields: [createdById], references: [id])

  @@index([is_active])
  @@index([show_in_home, is_active])
  @@index([start_date, end_date])
  @@index([createdById])
}

model Sales {
  id             String        @id @default(cuid())
  payment_method PaymentMethod
  source         SaleSource
  total          Float         @default(0.00)
  created_at     DateTime      @default(now()) @db.Timestamptz(3)
  userId         Int?
  tax            Float         @default(0.00)
  user           User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  products       Products[]
  manualProducts Json?         @default("[]")
  loadedManually Boolean       @default(false)
  paymentMethods Json?         @default("[]")

  @@index([created_at])
  @@index([userId])
  @@index([source, created_at])
  @@index([payment_method, created_at])
}

model Cart {
  id        Int      @id @default(autoincrement())
  total     Float    @default(0.00)
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     OrderItems[]

  @@index([userId])
}

model OrderItems {
  id               String   @id @default(cuid())
  productId        String
  quantity         Int      @default(1)
  price_has_changed Boolean  @default(false)
  cartId           Int
  cart             Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product          Products @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([cartId])
  @@index([productId])
}

model Orders {
  id             String   @id @default(cuid())
  userId         Int?
  user           User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  items          Json     @default("[]")
  total          Float    @default(0.00)
  payment_method String
  created_at     DateTime @default(now()) @db.Timestamptz(3)
  buyer_email    String?
  buyer_name     String?

  @@index([userId])
  @@index([created_at])
}
